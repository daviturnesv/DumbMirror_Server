{
  "name": "dumbmirror-relay-server",
  "version": "0.1.0",
  "description": "Relay server enabling DumbMirror remote control outside local network.",
  "type": "module",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "lint": "eslint \"src/**/*.{js,mjs}\" --max-warnings=0",
